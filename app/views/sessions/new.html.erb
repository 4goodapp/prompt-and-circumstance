<div class="grid grid-pad">
  <div class="col-1-3 center">
  <div class="content card login">
    <h2>Login</h2>
      <%= form_tag :action => :new do %>
        <%= label_tag :email, "Email" %> <br>
        <%= text_field_tag "email",  nil, class: "full-width" %> <br>
        <%= label_tag :password, "Password" %> <br>
        <%= password_field_tag :password, nil, class: "full-width" %> <br>

        <%= submit_tag "Log In", class: "full-width" %>
      <% end -%>
    </div>
  </div>
</div>