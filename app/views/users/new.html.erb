<div class="grid grid-pad">
  <div class="col-1-3 center">
  <div class="content card login">
    <h2>Sign Up</h2>
      <%= form_for :user, url: users_path do |f| -%>
        <%= f.label :name, "Name" %> <br>
        <%= f.text_field :name, class: "full-width" %> <br>
        <%= f.label :email, "Email" %> <br>
        <%= f.text_field :email, class: "full-width" %> <br>
        <%= f.label :password, "Password" %> <br>
        <%= f.password_field :password, class: "full-width" %> <br>

        <%= f.submit "Create Account", :disable_with => 'Submiting...', class: "full-width"  %>
      <% end -%>

    </div>
  </div>
</div>

