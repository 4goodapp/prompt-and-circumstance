<div class="voting">
  <%= form_tag({:action => "createPromptVote", :controller => "votes", vote: { votable_id: prompt.id, polarity: 1, votable_type: prompt.class}}) do %>
    <button type="submit" class="vote up">
      <i class="fa fa-arrow-up up"></i>
    </button>
  <% end -%>

  <h4 class="score"><%= prompt.score || 0 %></h4>

  <%= form_tag({:action => "createPromptVote", :controller => "votes", vote: { votable_id: prompt.id, polarity: -1, votable_type: prompt.class}}) do %>
    <button type="submit" class="vote down">
      <i class="fa fa-arrow-down down"></i>
    </button>
  <% end -%>
</div>